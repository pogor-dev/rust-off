root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 160

[*.md]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.tsv]
indent_size = 4
indent_style = tab

[*.rast]
indent_size = 2
indent_style = space
