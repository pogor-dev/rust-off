{
    "files.readonlyInclude": {
        "**/.cargo/registry/src/**/*.rs": true,
        "**/lib/rustlib/src/rust/library/**/*.rs": true,
        "**/node_modules/**": true,
    },
    "typescript.tsc.autoDetect": "off", // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        }
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        }
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        }
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
        "editor.formatOnSaveMode": "modifications",
        "editor.formatOnSaveExclude": [
            "**/*generated*/**/*.rs",
            "**/*generated.rs"
        ]
    },
    "rust-analyzer.testExplorer": true,
    "debug.allowBreakpointsEverywhere": true,
    "lldb.launch.breakpointMode": "path",
    "lldb.verboseLogging": false,
    "lldb.consoleMode": "evaluate",
}